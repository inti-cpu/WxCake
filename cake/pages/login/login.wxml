<!--pages/login/login.wxml-->
<view class="container"> 
 

 <view class="login-from"> 
 
 <!--账号-->
 <view class="inputView">  
  <label class="loginLab">账号</label> 
  <input class="inputText" placeholder="请输入账号" bindinput="inputName" /> 
 </view> 
 <view class="line"></view> 
 
 <!--密码-->
 <view class="inputView"> 
  <label class="loginLab">密码</label> 
  <input class="inputText" password="true" placeholder="请输入密码" bindinput="inputPassword" /> 
 </view> 
 
 <!--按钮-->
 <view class="loginBtnView"> 
  <button class="loginBtn"  bindtap="jumpToP01">登录</button> 
 </view> 
 </view> 
</view>

